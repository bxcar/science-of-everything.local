extends template/section-layout.pug

block prepend body
  - var bodyClass = 'video-page'
  - var breadcrumbsCurrent = 'Видеолекции'

block prepend content
  - var sortSelect = true
  //- - var sortOptionsGroup = [{label: 'Лекции в городе', items: ['Все лекции в городе', 'Дизайн', 'Город']}, {label: 'Онлайн-лекции', items: ['Все онлайн-лекции', 'Design', 'Дизайн', 'Город', 'Arkitektur', 'Наука']}, {label: 'Видео', items: ['Другие видеолекции']}]
  - var sortOptions = ['Лекции в городе', 'Онлайн-лекции', 'Видео']
